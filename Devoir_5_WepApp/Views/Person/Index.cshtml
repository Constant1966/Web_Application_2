@*@page
@model Devoir_5_WepApp.Views.Person.IndexModel
@{

}*@


@model IEnumerable<Person>

<h1>People</h1>

<a asp-controller="Person" asp-action="Create" class="btn btn-primary">Add Person</a>

<br />
<br />

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>First Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Occupation</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.FirstName</td>
                    <td>@person.Age</td>
                    <td>@person.Gender</td>
                    <td>@person.Address</td>
                    <td>@person.Telephone</td>
                    <td>@person.Email</td>
                    <td>@person.Occupation</td>
                    <td>
                        <a asp-controller="Person" asp-action="Edit" asp-route-id="@person.Id" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Person" asp-action="Delete" asp-route-id="@person.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No people found.</p>
}

